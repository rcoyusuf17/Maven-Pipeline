pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the repository from Git
                git branch: 'main', url: 'https://github.com/rcoyusuf17/Maven-Pipeline.git'
            }
        }

        stage('Maven Version') {
            steps {
                // Use 'cd' to navigate to the Maven project directory and run Maven version
                sh '''
                    cd maven-samples/single-module
                    mvn --version
                '''
            }
        }

        stage('Maven Validate') {
            steps {
                // Use 'cd' to navigate to the Maven project directory and run Maven validate
                sh '''
                    cd maven-samples/single-module
                    mvn validate
                '''
            }
        }

        stage('Maven Test') {
            steps {
                // Use 'cd' to navigate to the Maven project directory and run Maven tests
                sh '''
                    cd maven-samples/single-module
                    mvn test
                '''
            }
        }

        stage('Maven Build') {
            steps {
                // Use 'cd' to navigate to the Maven project directory and run Maven build
                sh '''
                    cd maven-samples/single-module
                    mvn package
                '''
            }
        }

        stage('Commit and Push WAR to Git') {
            steps {
                script {
                    // Define the WAR file path within the Maven project directory
                    def warFile = 'maven-samples/single-module/target/single-module-project.jar'

                    // Check if the WAR file exists and push to Git if it does
                    if (fileExists(warFile)) {
                        sh """
                        git add ${warFile}
                        git commit -m "Add WAR file"
                        git push origin main
                        """
                    } else {
                        error("WAR file does not exist")
                    }
                }
            }
        }

        stage('Maven Clean') {
            steps {
                // Use 'cd' to navigate to the Maven project directory and clean the project
                sh '''
                    cd maven-samples/single-module
                    mvn clean
                '''
            }
        }
    }

    post {
        always {
            // Clean workspace after build
            cleanWs()
        }
    }
}

